<div class="col-sm-3 sidenav no-padding">
    <div class="left">
        <div class="top form-group">
            <select class="form-control" id="select-type-chat">
                <option data-target="#all-chat" value="all-chat">Tất cả</option>
                <option data-target="#user-chat" value="user-chat">Cá nhân</option>
                <option data-target="#group-chat" value="group-chat">Nhóm</option>
            </select>
            <a href="#groupChatModal" class="create-group-chat" data-toggle="modal" 
                title="Tạo một nhóm trò chuyện mới"></a>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="all-chat">
                <ul class="people no-padding-start">
                    <% allconversationWithMessages.forEach(function(conversation) { %>
                        <% if (conversation.name) { %>
                            <a href="#uid_<%= conversation._id %>" class="room-chat" data-target="#to_<%= conversation._id %>">
                                <li class="person group-chat" data-chat="<%= conversation._id %>">
                                    <div class="left-avatar">
                                        <!-- <div class="dot"></div> -->
                                        <img src="images/users/group-avatar-trungquandev.png" alt="">
                                    </div>
                                    <div class="name">
                                        <span class="group-chat-name">
                                            <% if (conversation.name.length > 15) { %>
                                                <%= conversation.name.slice(0, 12) + '...' %>
                                            <% } else { %>  
                                                <%= conversation.name %>
                                            <% } %>
                                        </span> 
                                    </div>
                                    <span class="time"> <%= getDuration(conversation.messages) %></span>
                                    <span class="preview">
                                        <%- getLastMessage(conversation.messages, user._id) %>
                                    </span>
                                </li>
                            </a>
                        <% } else { %>
                            <a href="#uid_<%= conversation._id %>" class="room-chat" data-target="#to_<%= conversation._id %>">
                                <li class="person" data-chat="<%= conversation._id %>">
                                    <div class="left-avatar">
                                        <div class="dot"></div>
                                        <img src="images/users/<%= conversation.avatar %>" alt="">
                                    </div>
                                    <div class="name">
                                        <% if (conversation.username.length > 15) { %>
                                            <%= conversation.username.slice(0, 12) + '...' %>
                                        <% } else { %>  
                                            <%= conversation.username %>
                                        <% } %>
                                    </div>
                                    <span class="time"> <%= getDuration(conversation.messages) %></span>
                                    <span class="preview">
                                        <%- getLastMessage(conversation.messages, user._id) %>
                                    </span>
                                </li>
                            </a>
                        <% } %>
                    <% }) %>
                </ul>
                <!-- <hr style="width: 90%; margin: auto;"> -->
                <div class="read-more-all-conversation">
                    <a href="#" id="link-read-more-all-conversation"><strong>.  .  .</strong></a>
                </div>
            </div>
            <div class="tab-pane" id="user-chat">
                <ul class="people no-padding-start">
                    <% allconversationWithMessages.forEach(function(conversation) { %>
                        <% if (!conversation.members) { %>
                            <a href="#uid_<%= conversation._id %>" class="room-chat" data-target="#to_<%= conversation._id %>">
                                <li class="person" data-chat="<%= conversation._id %>">
                                    <div class="left-avatar">
                                        <div class="dot"></div>
                                        <img src="images/users/<%= conversation.avatar %>" alt="">
                                    </div>
                                    <div class="name">
                                        <% if (conversation.usernamelength > 15) { %>
                                            <%= conversation.username.slice(0, 12) + '...' %>
                                        <% } else { %>  
                                            <%= conversation.username %>
                                        <% } %>
                                    </div>
                                    <span class="time"> <%= getDuration(conversation.messages) %></span>
                                    <span class="preview">
                                        <%- getLastMessage(conversation.messages, user._id) %>
                                    </span>
                                </li>
                            </a>
                        <% } %>
                    <% }) %>
                </ul>
                <!-- <hr style="width: 90%; margin: auto;"> -->
                <div class="read-more-user-conversation">
                    <a href="#" id="link-read-more-user-conversation"><strong>.  .  .</strong></a>
                </div>
            </div>
            <div class="tab-pane" id="group-chat">
                <ul class="people no-padding-start">
                    <% allconversationWithMessages.forEach(function(conversation) { %> 
                        <% if (conversation.members) { %>
                            <a href="#uidgroupChatItem._id" class="room-chat" data-target="#to_<%= conversation._id %>">
                                <a href="#uid_<%= conversation._id %>" class="room-chat">
                                    <li class="person group-chat" data-chat="<%= conversation._id %>">
                                        <div class="left-avatar">
                                            <!-- <div class="dot"></div> -->
                                            <img src="images/users/group-avatar-trungquandev.png" alt="">
                                        </div>
                                        <div class="name">
                                            <span class="group-chat-name">
                                                <% if (conversation.name.length > 15) { %>
                                                    <%= conversation.name.slice(0, 12) + '...' %>
                                                <% } else { %>  
                                                    <%= conversation.name %>
                                                <% } %>
                                            </span>
                                        </div>
                                        <span class="time"> <%= getDuration(conversation.messages) %></span>
                                        <span class="preview">
                                            <%- getLastMessage(conversation.messages, user._id) %>
                                        </span>
                                    </li>
                                </a>
                            </a>
                        <% } %>
                    <% }) %>
                </ul>
                <!-- <hr style="width: 90%; margin: auto;"> -->
                <div class="read-more-group-conversation">
                    <a href="#" id="link-read-more-group-conversation"><strong>.  .  .</strong></a>
                </div>
            </div>
        </div>
        
    </div>
</div>

